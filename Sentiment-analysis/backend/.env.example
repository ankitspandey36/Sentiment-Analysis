# Environment Configuration for eConsultation Comment Analyzer

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/econsultation
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=econsultation

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=csv,xlsx,xls,json
UPLOAD_DIR=uploads

# AI/ML Service Configuration (when integrated)
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
SUMMARIZATION_MODEL=facebook/bart-large-cnn

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=application/json

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Security Settings
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090

# External Services
WORD_CLOUD_MAX_WORDS=100
CHART_CACHE_TTL=3600
EXPORT_TIMEOUT=300

# Development Settings
RELOAD=true
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Production Settings (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# WORKERS=4
# LOG_LEVEL=WARNING